{
  "version": 2,
  "builds": [
    {
      "src": "./backend/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/auth/(.*)", // /auth রাউটের জন্য
      "dest": "/backend/index.js"
    },
    {
      "src": "/messages/(.*)", // /messages রাউটের জন্য
      "dest": "/backend/index.js"
    },
    {
      "src": "/users/(.*)", // /users রাউটের জন্য
      "dest": "/backend/index.js"
    },
    {
      "src": "/(.*)", // frontend রাউটের জন্য
      "dest": "/frontend/dist/$1"
    }
  ]
}
